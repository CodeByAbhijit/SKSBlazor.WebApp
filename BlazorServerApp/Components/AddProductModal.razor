@inject BlazorServerApp.Services.IOrderService OrderService

<div>
    @if (visible)
    {
        <div class="modal-backdrop show"></div>
        <div class="modal show d-block">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Select Product</h5>
                        <button class="btn-close" @onclick="Hide"></button>
                    </div>
                    <div class="modal-body">
                        <input class="form-control mb-2" @bind="Query" @oninput="OnQuery" placeholder="Search product..." />
                        <table class="table table-hover">
                            <thead><tr><th>Code</th><th>Name</th><th>Unit Price</th><th></th></tr></thead>
                            <tbody>
                                @foreach (var p in Results)
                                {
                                    <tr>
                                        <td>@p.Code</td>
                                        <td>@p.Name</td>
                                        <td>@p.UnitPrice</td>
                                        <td><button class="btn btn-sm btn-primary" @onclick="() => Select(p)">Add</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool visible;
    private string Query = "";
    private List<BlazorServerApp.Models.Product> Results = new();

    public async Task Show()
    {
        visible = true;
        Results = await OrderService.SearchProductsAsync("");
        StateHasChanged();
    }

    public void Hide()
    {
        visible = false;
        StateHasChanged();
    }

    private async Task OnQuery(ChangeEventArgs e)
    {
        Results = await OrderService.SearchProductsAsync(Query);
        StateHasChanged();
    }

    [Parameter] public EventCallback<BlazorServerApp.Models.Product> OnProductSelected { get; set; }

    private async Task Select(BlazorServerApp.Models.Product p)
    {
        if (OnProductSelected.HasDelegate)
            await OnProductSelected.InvokeAsync(p);
        Hide();
    }
}