@using Microsoft.AspNetCore.Components.Forms
@page "/products"
@inherits ProductsBase

<h3>Products</h3>

<div class="card">
  <div class="card-body">
    <EditForm Model="Model" OnValidSubmit="SaveAsync">
      <DataAnnotationsValidator />
      <ValidationSummary />

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="productId" class="form-label">Product ID</label>
          <InputText id="productId" class="form-control" @bind-Value="Model.ProductID" />
          <ValidationMessage For="@(() => Model.ProductID)" />
        </div>

        <div class="col-md-6 mb-3">
          <label for="category" class="form-label">Category</label>
          <InputSelect id="category" class="form-select" @bind-Value="Model.CategoryId">
            <option value="">-- Select --</option>
            @foreach (var c in Categories)
            {
                <option value="@c.Id">@c.Name</option>
            }
          </InputSelect>
          <ValidationMessage For="@(() => Model.CategoryId)" />
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="unit" class="form-label">Unit</label>
          <InputText id="unit" class="form-control" @bind-Value="Model.Unit" />
          <ValidationMessage For="@(() => Model.Unit)" />
        </div>
        <div class="col-md-6 mb-3">
          <label for="qty" class="form-label">Quantity Per Unit</label>
          <InputNumber id="qty" class="form-control" @bind-Value="Model.QuantityPerUnit" />
          <ValidationMessage For="@(() => Model.QuantityPerUnit)" />
        </div>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary" disabled="@IsProcessing">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Close">Close</button>
      </div>

      <div class="mt-3" aria-live="polite">
        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert @MessageCss">@Message</div>
        }
      </div>
    </EditForm>
  </div>
</div>